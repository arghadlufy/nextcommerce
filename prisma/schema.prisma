generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id]) // one-to-many relationship
}

model Category {
  id   String @id @default(cuid())
  name String
  slug String @unique
  products Product[]
}
